import { useEffect } from "react";

const useAutoCloseAlert = (isVisible, setIsVisible, delay = 5000) => {
  useEffect(() => {
    if (isVisible) {
      const timer = setTimeout(() => {
        setIsVisible(false);
      }, delay);

      return () => clearTimeout(timer);
    }
  }, [isVisible, setIsVisible, delay]);
};

export default useAutoCloseAlert;
